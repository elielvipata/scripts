-- Copy and paste the following line into the terminal
sudo mysql -u root

-- After the prompt pops up, paste this 

CREATE USER 'yourusername'@'localhost' IDENTIFIED BY 'yourpassword';
GRANT PRIVILEGE ON database.table TO 'yourusername'@'host';
GRANT CREATE, ALTER, DROP, INSERT, UPDATE, DELETE, SELECT, REFERENCES, RELOAD on *.* TO 'yourusername'@'localhost' WITH GRANT OPTION;
FLUSH PRIVILEGES;
